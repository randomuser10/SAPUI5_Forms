<mvc:View controllerName="apple.simpleform.controller.SimpleForm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page id="page" title="Simple Form" titleAlignment="Center">
        <content>
            <form:SimpleForm id="form1" title = "Employee Details" layout="ResponsiveGridLayout"
            labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="3" columnsM="2"
            >
                <form:content>
                    <core:Title id="idCore" text="Employee Details"></core:Title>
                        <Label id="idLEid" text="Employee ID" class= "sapUiTinyMarginTop"></Label>
                        <Input id="idIpEid" ></Input>
                        <Label id="idLEName" text="Employee Name" class= "sapUiTinyMarginTop"></Label>
                        <Input id="idIpEName" ></Input>
                        <Label id="idLEDes" text="Employee Designation" class= "sapUiTinyMarginTop"></Label>
                        <Input id="idIpEDes" ></Input>
                    <core:Title id="ODetails" text="Other Details"></core:Title>
                        <Label id="idLAdd" text="Address" class="sapUiTinyMarginTop"></Label>
                        <Input id="idIpAdd"></Input>
                        <Label id="idLEmail" text="Email" class="sapUiTinyMarginTop"></Label>
                        <Input id="idIpEmail"></Input>


                </form:content>
            </form:SimpleForm>

    
    
        </content>
    </Page>
</mvc:View>